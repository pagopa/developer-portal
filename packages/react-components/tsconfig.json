{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "moduleResolution": "node"
  }
}
